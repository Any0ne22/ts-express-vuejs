{
  "files": ["src/server/app.ts"],
  "include": [
    // TODO CHANGE
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "build"],
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "baseUrl": ".", // public
    "moduleResolution": "node",
    "removeComments": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "*": [
        "node_modules/@types/*"
        // "./src/types/*"
      ]
    }
  }
}
