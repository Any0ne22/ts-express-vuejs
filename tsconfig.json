{
  "files": ["src/server/app.ts"],
  "include": [
    // TODO CHANGE
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "build"],
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "target": "es5",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "*": [
        "node_modules/@types/*"
        // "./src/types/*"
      ]
    },
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
